{
    "private": true,
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "clean": "rimraf packages/**/lib"
    },
    "devDependencies": {
        "@types/jest": "23.1.1",
        "@types/node": "10.3.4",
        "expect": "23.1.0",
        "jest": "23.1.0",
        "lerna": "2.11.0",
        "prettier": "1.13.5",
        "rimraf": "2.6.2",
        "ts-jest": "22.4.6",
        "tslint": "5.10.0",
        "tslint-config-prettier": "1.13.0",
        "tslint-eslint-rules": "5.3.1",
        "tslint-plugin-prettier": "1.3.0",
        "typescript": "2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ]
    },
    "workspaces": [
        "packages/*"
